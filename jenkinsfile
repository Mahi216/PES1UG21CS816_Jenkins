pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'echo "Building..."'
                // Add commands to build your project here
            }
        }
        stage('Test') {
            steps {
                sh 'echo "Testing..."'
                // Add commands to run your tests here
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo "Deploying..."'
                // Add commands to deploy your project here
            }
        }
    }

    post {
        always {
            sh 'echo "Pipeline complete."'
        }
        failure {
            sh 'echo "Pipeline failed."'
        }
    }
]]
